# Configuración de base de datos FreeRADIUS
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_DATABASE=radius

# Threshold en minutos para considerar una sesión como colgada
# Una sesión se considera colgada si no ha recibido actualizaciones en este tiempo
HUNG_SESSION_THRESHOLD=60

# Intervalo de ejecución del script en segundos (solo para Docker)
# Cada cuántos segundos se ejecutará el script de corrección
EXEC_INTERVAL=300

